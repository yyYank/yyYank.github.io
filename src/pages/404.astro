---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-8xl font-bold bg-gradient-to-r from-accent-cyan to-accent-purple bg-clip-text text-transparent mb-4">
      404
    </h1>
    <p class="text-xl text-gray-400 mb-8">ページが見つかりませんでした</p>
    <a
      href="/"
      class="inline-flex items-center gap-2 px-6 py-3 bg-dark-700 border border-dark-500 rounded-lg text-accent-cyan hover:bg-dark-600 transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      ホームに戻る
    </a>
  </div>
</BaseLayout>
