---
import BaseLayout from '../layouts/BaseLayout.astro';
import ImagePaste from '../components/img-paste/ImagePaste.tsx';
---

<BaseLayout title="Image Paste" description="クリップボード画像ペースト・保存ツール">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-3xl font-bold text-white mb-2">Image Paste</h1>
    <p class="text-gray-400 mb-8">クリップボードから画像をペーストして保存</p>
    <ImagePaste client:load />
  </div>
</BaseLayout>
