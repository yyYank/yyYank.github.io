---
import MobileMenu from './MobileMenu.tsx';

const navItems = [
  { href: '/docs/', label: 'MEMO' },
  { href: '/', label: 'Profile' }
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center">
        <img src="/images/logo.svg" alt="Logo" class="h-8 hidden md:block" />
        <img src="/images/logo-mobile.svg" alt="Logo" class="h-8 md:hidden" />
      </a>

      <nav class="hidden md:flex items-center space-x-6">
        {navItems.map(item => (
          <a href={item.href} class="text-gray-700 hover:text-primary-600 font-medium transition-colors">
            {item.label}
          </a>
        ))}
      </nav>

      <MobileMenu client:load navItems={navItems} />
    </div>
  </div>
</header>
