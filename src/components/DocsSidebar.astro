---
import type { CollectionEntry } from 'astro:content';

interface Props {
  docs: CollectionEntry<'docs'>[];
  currentSlug?: string;
  plain?: boolean;
}

const { docs, currentSlug, plain = false } = Astro.props;
---

<nav class:list={[plain ? 'p-2' : 'bg-dark-800 border border-dark-600 rounded-lg p-4']}>
  {!plain && <h4 class="font-bold text-white mb-4">Docs</h4>}
  <ul class="space-y-2">
    {docs.map(doc => (
      <li>
        <a
          href={`/docs/${doc.slug}/`}
          class:list={[
            'block py-2 px-3 rounded-lg transition-colors text-sm',
            currentSlug === doc.slug
              ? 'bg-accent-cyan/10 text-accent-cyan border border-accent-cyan/30'
              : 'text-gray-400 hover:text-white hover:bg-dark-700'
          ]}
        >
          {doc.data.title}
        </a>
      </li>
    ))}
  </ul>
</nav>
